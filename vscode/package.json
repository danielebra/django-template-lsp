{
	"name": "djlsp",
	"description": "A django template lsp client",
	"author": "Four Digits",
	"license": "GPL3",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/fourdigits/django-template-lsp"
	},
	"publisher": "FourDigits",
	"categories": ["Languages"],
	"keywords": [
		"language",
		"client",
		"lsp",
		"django",
		"template"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:html",
		"onLanguage:django-html"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Django Template LSP",
			"properties": {
				"djangoTemplateLsp.dockerComposeFile": {
					"type": "string",
					"default": "docker-compose.yml",
					"description": "The path to the docker-compose file"
				},
				"djangoTemplateLsp.dockerComposeService": {
					"type": "string",
					"default": "django",
					"description": "The service name in the docker-compose file"
				},
				"djangoTemplateLsp.djangoSettingsModule": {
					"type": "string",
					"default": "",
					"description": "The settings module to use"
				},
				"djangoTemplateLsp.enableLogging": {
					"type": "boolean",
					"default": false,
					"description": "Enable logging"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src --ext .ts,.tsx",
		"fix": "eslint ./client/src --ext .ts,.tsx --fix",
		"postinstall": "cd client && npm install && cd ..",
		"vsce-package": "vsce package -o djlsp.vsix"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"typescript": "^5.3.3",
		"@vscode/vsce": "^2.25.0"
	}
}
